aws_region       = "eu-central-1"
instance_type    = ""
allow_ssh        = true
# Restrict SSH to your public IPs (example):
ssh_allowed_cidrs = ["203.0.113.4/32", "198.51.100.10/32"]
ssh_key_name     = "devops-project-key"
ssh_public_key   = "ssh-rsa AAAA..."

# Docker image to deploy (if using user-data or other automation)
docker_image     = "ghcr.io/OWNER/REPO:latest"
# Leave credentials empty for public images
ghcr_username    = ""
ghcr_token       = ""# AWS Configuration
aws_region = "us-east-1"  # or "eu-central-1", "us-west-2", etc.

# EC2 Instance Type (optional - will auto-select free tier if empty)
instance_type = ""  # e.g., "t2.micro", "t3.micro"

# SSH Access
allow_ssh = true
ssh_key_name = "devops-project-key"
# Generate SSH key with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/devops-project-key
# Then paste the content of ~/.ssh/devops-project-key.pub below:
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"

# Note: Docker image deployment is handled by Ansible, not Terraform
# See ansible/README.md for deployment instructions
